<%- include('_partials/_head.ejs'); %>

<body>
  <%- include('_partials/_header.ejs', { loggedIn: false }); %>
  <%- include('_partials/_search.ejs'); %>
  <%- include('_partials/_breadcrumbs.ejs'); %>
  <%- include('_partials/_notification.ejs'); %>
  <div class="dp-po">
    <main class="dp-po-main dp-po-news-home">
      <div class="container">
        <div class="row">
          <div class="col-sm-9">
            <div class="dp-po-title">
              <img class="dp-po-title-svg" src="/portal-components/portal-style/static/img/page-icons/news.svg">
              <h2 class="dp-po-title-text">News</h2>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="d-none d-sm-block">
              <%- include('_partials/_subscribe.ejs'); %>
            </div>
          </div>
        </div>
        <div class="d-block d-sm-none">
          <div class="dp-po-post-mobile-area">
            <%- include('_partials/_subscribe.ejs'); %>
            <a href="javascript:void(0)" data-toggle="modal" data-target="#postExtraMobile"><i
                class="far fa-align-center"></i></a>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-9">

            <%- include('_partials/_news-listing.ejs'); %>
            <%- include('_partials/_pagination.ejs'); %>
          </div>
          <div class="col-sm-3">
            <div class="d-none d-sm-block">
              <div class="dp-po-sidebar dp-po-news-filter dp-po-news-filter-type">
                <h3 class="dp-po-news-filter-title">Select type</h3>
                <a class="dp-po-news-filter-collapse" data-toggle="collapse" href="#collapseExample" role="button"
                  aria-expanded="false" aria-controls="collapseExample">
                  <i class="dp-po-icon far fa-angle-down"></i>
                </a>
                <div class="collapse show" id="collapseExample">
                  <div class="dp-po-news-filter-type-option">
                    <a href="javascript:void(0)" class="dp-po-news-filter-type-link active">all</a>
                    <a href="javascript:void(0)" class="dp-po-news-filter-type-link">none</a>
                  </div>
                  <ul class="dp-po-news-filter-type-list">
                    <li class="dp-po-news-filter-type-item">
                      <div class="form-group dp-po-form-check">
                        <input type="checkbox" class="form-check-input" id="supportCheck" checked>
                        <label class="form-check-label" for="supportCheck">Blog</label>
                      </div>
                    </li>
                    <li class="dp-po-news-filter-type-item">
                      <div class="form-group dp-po-form-check">
                        <input type="checkbox" class="form-check-input" id="hrCheck" checked>
                        <label class="form-check-label" for="hrCheck">Product</label>
                      </div>
                    </li>
                    <li class="dp-po-news-filter-type-item">
                      <div class="form-group dp-po-form-check">
                        <input type="checkbox" class="form-check-input" id="rndCheck" checked>
                        <label class="form-check-label" for="rndCheck">Release</label>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>
              <div class="dp-po-sidebar dp-po-news-filter dp-po-news-filter-date">
                <h3 class="dp-po-news-filter-title">Select date</h3>
                <a class="dp-po-news-filter-collapse" data-toggle="collapse" href="#collapseExample1" role="button"
                  aria-expanded="false" aria-controls="collapseExample">
                  <i class="dp-po-icon far fa-angle-down"></i>
                </a>
                <div class="collapse show" id="collapseExample1">
                  <div class="dp-po-news-filter-date-option">
                    <ul class="dp-po-news-filter-date-year-list">
                      <li class="dp-po-news-filter-date-year-item">
                        <a href="javascript:void(0)" class="dp-po-news-filter-date-year-link">2019</a>
                      </li>
                      <li class="dp-po-news-filter-date-year-item">
                        <a href="javascript:void(0)" class="dp-po-news-filter-date-year-link active">2018</a>
                      </li>
                      <li class="dp-po-news-filter-date-year-item">
                        <a href="javascript:void(0)" class="dp-po-news-filter-date-year-link">2017</a>
                      </li>
                      <li class="dp-po-news-filter-date-year-item">
                        <a href="javascript:void(0)" class="dp-po-news-filter-date-year-link">2016</a>
                      </li>
                      <li class="dp-po-news-filter-date-year-item">
                        <a href="javascript:void(0)" class="dp-po-news-filter-date-year-link">2015</a>
                      </li>
                      <li class="dp-po-news-filter-date-year-item">
                        <a href="javascript:void(0)" class="dp-po-news-filter-date-year-link">2014</a>
                      </li>
                    </ul>
                    <ul class="dp-po-news-filter-date-month-list">
                      <li class="dp-po-news-filter-date-month-item">
                        <a href="javascript:void(0)" class="dp-po-news-filter-date-month-link">JAN</a>
                      </li>
                      <li class="dp-po-news-filter-date-month-item">
                        <a href="javascript:void(0)" class="dp-po-news-filter-date-month-link">FEB</a>
                      </li>
                      <li class="dp-po-news-filter-date-month-item">
                        <a href="javascript:void(0)" class="dp-po-news-filter-date-month-link">MAR</a>
                      </li>
                      <li class="dp-po-news-filter-date-month-item">
                        <a href="javascript:void(0)" class="dp-po-news-filter-date-month-link">APR</a>
                      </li>
                      <li class="dp-po-news-filter-date-month-item">
                        <a href="javascript:void(0)" class="dp-po-news-filter-date-month-link">MAY</a>
                      </li>
                      <li class="dp-po-news-filter-date-month-item">
                        <a href="javascript:void(0)" class="dp-po-news-filter-date-month-link active">JUN</a>
                      </li>
                      <li class="dp-po-news-filter-date-month-item">
                        <a href="javascript:void(0)" class="dp-po-news-filter-date-month-link">JUL</a>
                      </li>
                      <li class="dp-po-news-filter-date-month-item">
                        <a href="javascript:void(0)" class="dp-po-news-filter-date-month-link">AUG</a>
                      </li>
                      <li class="dp-po-news-filter-date-month-item">
                        <a href="javascript:void(0)" class="dp-po-news-filter-date-month-link">SEP</a>
                      </li>
                      <li class="dp-po-news-filter-date-month-item">
                        <a href="javascript:void(0)" class="dp-po-news-filter-date-month-link">OCT</a>
                      </li>
                      <li class="dp-po-news-filter-date-month-item">
                        <a href="javascript:void(0)" class="dp-po-news-filter-date-month-link">NOV</a>
                      </li>
                      <li class="dp-po-news-filter-date-month-item">
                        <a href="javascript:void(0)" class="dp-po-news-filter-date-month-link">DEC</a>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Mobile Modal -->
        <div class="modal fade mobile-modal" id="postExtraMobile" tabindex="-1" role="dialog"
          aria-labelledby="postExtraMobile" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <%- include('_partials/_news-filter-mobile.ejs'); %>
              </div>
            </div>
          </div>
        </div>
    </main>
  </div>
  <%- include('_partials/_footer.ejs'); %>
</body>

</html>
