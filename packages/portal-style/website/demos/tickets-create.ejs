<%- include('_partials/_head.ejs'); %>

<body>
  <%- include('_partials/_header.ejs'); %>
  <%- include('_partials/_search.ejs'); %>
  <%- include('_partials/_breadcrumbs.ejs'); %>

  <div class="dp-po">
    <main class="dp-po-main dp-po-ticket-create">
      <div class="container">
        <div class="row">
          <div class="col-sm-7 col-centered">
            <div class="dp-po-title">
              <img class="dp-po-title-svg" src="/portal-components/portal-style/static/img/page-icons/contact-us.svg">
              <h2 class="dp-po-title-text">Contact us</h2>
            </div>
            <div class="dp-po-block">
              <div class="dp-po-ticket-create">
                <form class="dp-po-ticket-create-form">
                  <p>Please complete this form and one of our agents will reply to you by email as soon as possible.</p>
                  <form class="do-po-form">
                    <div class="row">
                      <div class="col-sm-6">
                        <div class="form-group">
                          <label for="exampleInputEmail1">Name</label>
                          <input type="text" class="form-control form-success" id="exampleInputEmail1"
                            aria-describedby="emailHelp" placeholder="Name">
                          <small id="emailHelp" class="form-text text-success">HelpText or Success Message</small>
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="form-group">
                          <label for="exampleInputEmail1">Email</label>
                          <input type="email" class="form-control form-error" id="exampleInputEmail1"
                            aria-describedby="emailHelp" placeholder="Email Address">
                          <small id="emailHelp" class="form-text text-danger">HelpText or Error Message</small>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail1">Type of inquiry *</label>
                      <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        placeholder="Reports">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail1">Cloud or On-Premise helpdesk *</label>
                      <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        placeholder="Cloud">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail1">Subject *</label>
                      <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        placeholder="Reports">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail1">CC</label>
                      <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        placeholder="email@domain.com">
                    </div>

                    <div class="form-group">
                      <label for="exampleFormControlTextarea1">Message*</label>
                      <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Text"></textarea>
                    </div>
                    <div class="form-group dp-po-form-upload">
                      <label for="exampleFormControlFile1">Add attachment</label>
                      <!--<input type="file" class="form-control-file" id="exampleFormControlFile1">-->
                      <div class="dp-po-form-upload-wrap">
                        <div class="btn btn-icon btn-outline-secondary">
                          <i class="dp-po-icon fal fa-file-alt"></i>
                          Choose a file
                        </div>
                        <span>or</span>
                        <div class="dp-po-drag">
                          <i class="dp-po-icon far fa-bring-forward"></i>
                          Drag and drop
                        </div>
                      </div>
                    </div>
                    <div class="form-group dp-po-form-captcha">
                      <div class="row align-items-center no-gutters">
                        <div class="col-sm-5">
                          <label for="exampleInputEmail1">CAPTCHA</label>
                          <div class="dp-po-form-captcha-text"></div>
                        </div>
                        <div class="col-sm-2 text-center">
                          <label for="exampleInputEmail1">&nbsp;</label>
                          <a href="" class="dp-po-form-captcha-reload"><i class="dp-po-icon far fa-sync"></i></a>
                        </div>
                        <div class="col-sm-5">
                          <label for="exampleInputEmail1">&nbsp;</label>
                          <input type="text" class="form-control" aria-describedby="emailHelp"
                            placeholder="Insert text">
                        </div>
                      </div>
                      <small id="emailHelp" class="form-text">To prove you are human, please insert the text you can see
                        in the box
                        above.</small>

                    </div>
                    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                  </form>
                </form>
              </div>
            </div>
            <br />
            <div class="dp-po-block">
              <div class="dp-po-ticket-success">
                <i class="dp-po-icon fal fa-user"></i>
                <h2 class="dp-po-ticket-success-title">Congraulations, your request is on its way</h2>
                <p class="dp-po-ticket-success-number">Reference number: ALVM-6732-XRKJ</p>
                <p class="dp-po-ticket-success-msg">Thank you for contacting us. One of our team will be in touch with
                  you shortly.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
  <%- include('_partials/_footer.ejs'); %>
</body>

</html>
